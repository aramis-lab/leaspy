	pmcid = {PMC9851985},
	keywords = {Bayes Theorem, Cerebellar Ataxia, disease course mapping, Disease Progression, Humans, Movement Disorders, Scale for the Assessment and Rating of Ataxia, spinocerebellar ataxia, Spinocerebellar Ataxias},
