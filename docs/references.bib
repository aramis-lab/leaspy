	journal = {Nature Communications},
	author = {Maheux, Etienne and Koval, Igor and Ortholand, Juliette and Birkenbihl, Colin and Archetti, Damiano and Bouteloup, Vincent and Epelbaum, Stéphane and Dufouil, Carole and Hofmann-Apitius, Martin and Durrleman, Stanley},
	month = feb,
	year = {2023},
	note = {Publisher: Nature Publishing Group},
	keywords = {Alzheimer's disease, Clinical trial design, Prognostic markers},
	pages = {761},
	file = {Full Text PDF:/Users/juliette.ortholand/Zotero/storage/B3XL4HK6/Maheux et al. - 2023 - Forecasting individual progression trajectories in Alzheimer’s disease.pdf:application/pdf},
