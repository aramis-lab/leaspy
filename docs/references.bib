	number = {1},
	journal = {Movement Disorders: Official Journal of the Movement Disorder Society},
	author = {Moulaire, Paul and Poulet, Pierre Emmanuel and Petit, Emilien and Klockgether, Thomas and Durr, Alexandra and Ashisawa, Tetsuo and Tezenas du Montcel, Sophie and {READISCA Consortium}},
	month = jan,
