	journal = {Scientific Reports},
	author = {Koval, Igor and Dighiero-Brecht, Thomas and Tobin, Allan J. and Tabrizi, Sarah J. and Scahill, Rachael I. and Tezenas du Montcel, Sophie and Durrleman, Stanley and Durr, Alexandra},
	month = nov,
	year = {2022},
	note = {Publisher: Nature Publishing Group},
	keywords = {Clinical trial design, Computational models, Huntington's disease, Prognostic markers, Statistics},
	pages = {18928},
	file = {Full Text PDF:/Users/juliette.ortholand/Zotero/storage/LI4TRSJR/Koval et al. - 2022 - Forecasting individual progression trajectories in Huntington disease enables more powered clinical.pdf:application/pdf},
