	author = {Marinescu, Răzvan V. and Oxtoby, Neil P. and Young, Alexandra L. and Bron, Esther E. and Toga, Arthur W. and Weiner, Michael W. and Barkhof, Frederik and Fox, Nick C. and Golland, Polina and Klein, Stefan and Alexander, Daniel C.},
